<section class="container">
<p style="color: green"><%= notice %></p>

<h1>Expenditures</h1>

<div id="expenditures">
  <% @expenditures.each do |expenditure| %>
    <%= render expenditure %>
    <p class='spacing'>
      <%= link_to "Show this expenditure", expenditure %>
    </p>
  <% end %>
</div>
<%= link_to new_expenditure_path, action: 'go' do %>
    <%= button_tag(type: 'button', class:"waves-effect waves-light btn new_group_btn") do%>
      <i class="material-icons right">plus_one</i>New Expenditure
    <%end%>
  <% end %>
</section>
