<div id="<%= dom_id group %>">
<div class="col s12 m7">
  <div class="card horizontal hoverable">
    <div class="card-image">
    <%if group.icon.empty?%>
      <%=image_tag('generic.png', {:style => "width:10rem;"})%>
      <%else%>
      <%=image_tag(group.icon, {:style => "width:10rem;"})%>
      <% end %>

    </div>
    <div class="card-stacked">
      <div class="card-content card-custom-font">
        <%=group.name%>
      </div>
      <div class="card-action">
        <%=link_to 'Delete this Category', @group, {method: :delete, data: {turbo: false}, class:'card-action__delete'} %> 
      </div>
    </div>
  </div>
</div>

</div>
